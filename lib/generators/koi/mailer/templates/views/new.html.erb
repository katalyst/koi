<%% content_for :title, "New <%= singular_name.titleize %>" %>

<%%= simple_form_for(@<%= instance_name %>) do |f| %>

  <div class="spacing">

    <%% unless f.error_notification.blank? -%>
      <div class="error">
        <%%= f.error_notification %>
      </div>
    <%%- end -%>

    <div class="inputs">
    <%- for attribute in model_attributes -%>
      <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %> %>
    <%- end -%>
    </div>

    <%- unless @skip_recaptcha -%>
      <%%= recaptcha_tags -%>
      <%% unless @contact.errors[:base].empty? -%>
        <p><span class="error-block"><%%= @<%= instance_name %>.errors[:base].first %></span></p>
      <%% end %>
    <%- end -%>

    <div class="actions">
      <%%= f.button :submit %>
    </div>

  </div>

<%% end %>
