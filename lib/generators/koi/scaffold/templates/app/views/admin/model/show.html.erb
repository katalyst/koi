<% content_for(:breadcrumbs) { link_to "HUMAN_PLURAL_NAME", [:admin, CLASS_NAME] } %>
<% content_for :actions do %>
  <%= link_to "Edit", [:edit, :admin, SINGULAR_NAME] %>
<% end %>

<h2>Summary</h2>

<%= definition_list(class: "item-table") do |builder| %>
