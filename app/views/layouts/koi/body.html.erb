<% content_for :html do %>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to koi_engine.dashboard_path, class: "logo-header" do %>
            <%= image_tag "koi/application/logo-katalyst.png", border: 0 %>
          <% end %>
          <ul class="nav pull-right">
            <li><%= link_to "Dashboard", koi_engine.dashboard_path %></li>
            <li><%= link_to "Sitemap", koi_engine.sitemap_nav_items_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">  Module <b class="caret"></b> </a>

              <ul class="dropdown-menu">
                <% Koi::Menu.items.each do |key, value| %>
                  <%= content_tag :li, link_to(key, value) %>
                <% end %>
              </ul>
            </li>
            <li><a href="#">Reports</a></li>
            <li><%= link_to "Settings", koi_engine.translations_path %></li>
            <li><%= link_to "Help", koi_engine.screencasts_path %></li>
            <li><%= link_to "Logout", koi_engine.destroy_admin_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container space-t-10 ">
      <%= content_for?(:body) ? yield(:body) : yield %>
    </div>
  </body>
<% end %>

<%= render :file => 'layouts/koi/html' %>
