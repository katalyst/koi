<ul class="non-pane">
  <li><%= link_to "View site", "/", data: { turbo: false } %></li>
  <%= navigation_helper("Dashboard", koi_engine.dashboard_path) %>
  <%= navigation_helper("Navigation", katalyst_navigation.root_path) %>
  <%= navigation_helper("Sitemap (deprecated)", koi_engine.sitemap_nav_items_path) %>
  <%= navigation_helper("Pages", koi_engine.pages_path) %>
  <%= navigation_items_with(items: Koi::Menu.menu.published_tree) %>
  <li>
    <a href="#">Assets</a>
    <ul>
      <%= navigation_helper("Images", koi_engine.images_path(tags: nil)) %>
      <%= navigation_helper("Documents", koi_engine.documents_path(tags: nil)) %>
    </ul>
  </li>
  <% if Object.const_defined?("Flipper::UI") %>
    <%= navigation_helper("Flipper", koi_engine.root_path.concat("flipper"), data: { turbo: false }) %>
  <% end %>
  <%= navigation_helper("Settings", koi_engine.translations_path) %>
  <%= navigation_helper("Help", koi_engine.help_path) %>
  <% if Rails.env.development? %>
    <%= navigation_helper("Developer Styleguide", koi_engine.styleguide_path) %>
  <% end %>
  <li><%= link_to "Logout", koi_engine.destroy_admin_session_path, method: :delete %></li>
</ul>
