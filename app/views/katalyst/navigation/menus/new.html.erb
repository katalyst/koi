<% content_for :header do %>
  <%= render Koi::Header::NewComponent.new(model: Katalyst::Navigation::Menu, title: "New navigation") do |component| %>
    <% component.with_breadcrumb "Navigations", katalyst_navigation.menus_path %>
  <% end %>
<% end %>

<%= form_with model: menu, url: katalyst_navigation.menus_path do |form| %>
  <%= form.govuk_text_field :title %>
  <%= form.govuk_text_field :slug %>
  <%= form.govuk_text_field :depth %>
  <%= form.admin_save %>
<% end %>
