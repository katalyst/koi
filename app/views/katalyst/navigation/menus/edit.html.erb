<% content_for :title, "Edit navigation" %>
<% content_for(:breadcrumbs) { link_to "Navigations", katalyst_navigation.menus_path } %>
<% content_for :form_class, "govuk-forms" %>

<%= form_with model: menu, url: katalyst_navigation.menu_path(menu), builder: GOVUKDesignSystemFormBuilder::FormBuilder do |form| %>
  <%= form.govuk_text_field :title %>
  <%= form.govuk_text_field :slug %>
  <%= form.govuk_text_field :depth %>
  <%= form.govuk_submit name: :commit, value: :save do %>
    <%= link_to "Delete", katalyst_navigation.menu_path(menu),
                class: "govuk-button govuk-button--warning",
                data: { turbo_confirm: "Are you sure? This cannot be undone.", turbo_method: :delete } %>
  <% end %>
<% end %>
