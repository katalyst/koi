<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<div class="hoverable rounded-3px padded-1 solid orange next button as-iblk ln-h-2 <%= "disabled" if current_page.last? %>">
  <%= link_to raw(t 'views.pagination.next'), "#{ url unless current_page.last? }", :rel => 'next', :remote => remote, :data => { :get_script => true } %>
</div>
