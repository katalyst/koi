<div class="span10">
  <%= form_tag collection_path, :method => 'get', class: "form-search form-inline space-0" do %>

    <%= hidden_field_tag :direction, params[:direction], id: "search_direction" %>
    <%= hidden_field_tag :sort, params[:sort], id: "search_sort" %>
    <%= hidden_field_tag :per, params[:per], id: "search_per" %>

    <span>Search</span>

    <input type="text"
           name="search"
           placeholder="Enter search criteria"
           value="<%= params[:search] %>"
           class="span5" />

        <%= content_tag :button, "Go", type: "submit", name: "commit", value: "Search", :class => "btn btn-primary btn-mini" %>
        <%= link_to "Reset", collection_path, class: "btn btn-mini" %>
  <% end %>
</div>
