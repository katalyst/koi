    <%- end -%>

    <%- if is_reportable? -%>
      <li><a href="#tab-reports" data-tab="tab-reports" class="tabs--link">Reports</a></li>
    <%- end -%>

    <%- if current_admin.god? -%>
      <li><a href="#tab-extra" data-tab="tab-extra" class="tabs--link">Extra</a></li>
    <%- end -%>
  </ul>
</nav>