<div class="action view">
  <%= render 'edit_title' %>

  <% if is_settable? %>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#tab-edit" data-toggle="tab">Edit</a></li>
      <li><a href="#tab-settings" data-toggle="tab">Settings</a></li>
      <%- if current_admin.god? -%>
        <li><a href="#tab-extra" data-toggle="tab">Extra</a></li>
      <%- end -%>
    </ul>
  <% end %>

  <div class="tab-content">
    <div class="tab-pane active" id="tab-edit">
      <%= render 'edit_form' %>
      <%= render 'edit_form_actions' %>
    </div>

    <% if is_settable? %>
      <div class="tab-pane" id="tab-settings">
        <%= render 'koi/settings/settings' %>
      </div>
      <%- if current_admin.god? -%>
        <div class="tab-pane" id="tab-extra">
          <%= render 'koi/settings/extra' %>
        </div>
      <%- end -%>
    <% end %>
  </div>
</div>

<% content_for :side do %>
  <%= render 'side' %>
<% end %>
