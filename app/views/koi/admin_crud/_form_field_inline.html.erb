<%-
  partial                 = "inline_fields"
  attr_string             = attr.to_s
  klass                   = attr_string.classify.constantize
  header                  = klass.model_name.human
  singular_name_humanized = header.singularize
  add_link                = "Add #{singular_name_humanized}"
  records                 = f.object.send(attr)

  is_orderable            = (klass.has_crud? && klass.options[:orderable]) ? true : false
  records                 = records.sort_by(&:ordinal) if is_orderable

  locals_to_be_passed = {
    is_orderable: is_orderable,
    attr_string: attr_string,
    singular_name_humanized: singular_name_humanized
  }
-%>

<div class="inline-nested-form <%= attr_string %>" data-inline-nested <%= "data-inline-nested-sortable" if is_orderable -%>>

  <div class="inline-nested--heading" data-inline-nested-field-heading>
    <strong><%= header %></strong>
    <%- if is_orderable -%>
      <div class="inline-actions">
        <label><input type="checkbox" name="show-inline-draggable" class="show-inline-draggable" value="1" data-inline-nested-sortable-toggle /> allow re-ordering</label>
      </div>
    <%- end -%>
  </div>
  <div class="inline-nested--wrapper">

    <div class="inline-nested--container">
      <%= f.simple_fields_for attr, records do |record| %>
        <%= render partial, { f: record }.merge(locals_to_be_passed) %>
      <%- end -%>
      <div class="nested-links">
          <%= link_to_add_association add_link, f, attr, partial: partial,
              render_options: { locals: locals_to_be_passed }, class: "button__primary align-box-right" %>
      </div>
    </div>
  </div>

  <%- if f.error(attr) -%>
    <p class="error-block">
      <%= header %> <%= resource.errors.messages[attr][0] -%>
    </p>
  <%- end -%>

</div>


<%- content_for :javascripts do -%>
  <script>
    $(document).on("ornament:refresh", function(){
      // When inserting a new item, call the inline-nested function to do stuff to the inserted element
      $('body').unbind('cocoon:after-insert').bind('cocoon:after-insert', function(event, insertedItem) {
        $(document).trigger("ornament:inline-nested:insert", [insertedItem]);
        $(document).trigger("ornament:show-js");
      });
    });
  </script>

  <%= render "user_inline_javascript" -%>

<%- end -%>
