<%-
  crud_settings = klass.crud.find(:fields, attr)

  wrapper_opts = {
    data: ""
  }
  input_opts = {} 

  if crud_settings
    wrapper_opts[:data] = crud_settings[:data] if crud_settings[:data]
  end
-%>

<% data = resource_class.crud.find(:fields, attr, :data) %>
<% if data.nil? %>
  <%= f.input attr.to_sym, :as => :radio, wrapper_html: wrapper_opts, input_opts %>
<% else %>
  <%= f.input attr.to_sym, :as => :radio, collection: data, wrapper_html: wrapper_opts, input_html: input_opts %>
<% end %>
