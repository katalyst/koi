<div class="form--actions">
  <div class="button-group">
    <div>
      <%= content_tag :button, "Save", type: "submit", name: "commit", value: "Save", class: "button__save", data: { form_cleaner: "" } %>
    </div>
    <div>
      <%= content_tag :button, "Save & Continue", type: "submit", name: "commit", value: "Continue", class: "button__save-continue", data: { form_cleaner: "" } %>
    </div>
    <% if !resource.new_record? && current_admin.god? %>
      <div>
        <%= link_to("Delete", resource_path, data: { confirm: "Are you sure?" }, method: :delete, class: "button__error" )%>
      </div>
    <% end %>
    <div>
      <%= link_to "Back", collection_path, class: "button__back" %>
    </div>
  </div>
</div>
