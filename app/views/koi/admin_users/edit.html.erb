<% content_for :title, "Edit admin user" %>
<% content_for(:breadcrumbs) do %>
  <%= link_to "Admin users", admin_users_path %>
  <%= link_to admin.to_s, admin_user_path(admin) %>
<% end %>
<% content_for :form_class, "govuk-forms" %>

<%= form_with(model: admin, url: admin_user_path(admin)) do |form| %>
  <%= render "form_fields", form: %>

  <div class="govuk-button-group">
    <%= form.admin_save %>
    <%= form.admin_delete text: "Delete" %>
  </div>
<% end %>
