<%- if is_allowed?(:index) %>
 <%= link_to "List", collection_path %>
<%- end %>
<%- unless resource.new_record? %>
  <%- if is_allowed?(:show) %>
   | <%= link_to "Show", resource_path %>
  <%- end %>
  <%- if is_allowed?(:destroy) %>
   | <%= link_to "Destroy", resource_path, :confirm => 'Are you sure?', :method => :delete %>
  <%- end %>
<%- end %>
