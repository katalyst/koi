<li class="space-b-1">
  <%= f.label(attr) %>
  <div class="as-clr">
    <% unless resource.send(attr).nil? || resource.new_record? %>
      <%= link_to "Download File", resource.send(attr).url, :class => 'imgfix left space-r-1 space-b-1' %>
    <% end %>
    <ol class="left unmarked-list">
      <li>
        <label>
          <%= f.radio_button("remove_#{attr}", false, :checked => true) %>
          <% if resource.send(attr).nil? || resource.new_record? %>
            No file
          <% else %>
            Keep this file
          <% end %>
        </label>
      </li>
      <% unless resource.send(attr).nil? || resource.new_record? %>
        <li>
          <label>
            <%= f.radio_button("remove_#{attr}", true) %>
            Delete this file
          </label>
        </li>
      <% end %>
      <li>
        <label>
          <%= f.radio_button("remove_#{attr}", false) %>
          Upload a new file
        </label>
        <div class="h-1"></div>
        <%= f.file_field(attr) %>
      </li>
    </ol>
  </div>
  <%= f.error(attr) %>
  <%= f.hint(attr) %>
</li>
