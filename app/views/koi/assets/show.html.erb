<header class="pad-1">
  <h4><%= resource_class.name %> Details</h4>
</header>

<section class="pad-1 font-12px">
  <%= render "preview" %>

  <% unless resource.tags.empty? %>
    <h6 class="space-t-1">Tags:</h6>

    <ul class="unmarked-list floated-l-list clearfix">
      <% resource.tags.each do |tag| %>
        <li class="space-r-1"><a><%= tag.name %></a></li>
      <% end %>
    </ul>
  <% end %>


  <div class="space-b-1">
    <%= link_to "Edit tags", { action: :edit }, class: "txt-grey" %>
  </div>

  <form class="insert asset application">

    <input type="hidden" name="asset[url]" value="<%= resource.url.to_json %>" />

    <%= render "options" %>

    <button class="btn btn-primary btn-small insert asset link">Add to Page</button>

    <%= link_to "Delete", url_for(:action => 'delete'),
                        :confirm => "Are you sure you want to delete this #{ resource_class.name.downcase }?",
                        :method  => 'delete',
                        :class   => "btn btn-small" %>
  </form>
</section>
