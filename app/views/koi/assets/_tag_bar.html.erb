<p class="pull-left">Filter:</p>
<ul class="unmarked-list floated-l-list spaced-l-list pull-left space-l-0">

  <%# @all_tags = %w[ Untagged Guidelines Terms&Conditions Reports Other ] %>

  <li class="<%= "black" if @tags.empty? %>">
    <%= link_to "All", { tags: nil }, class: "btn btn-mini" %>
  </li>

  <% @all_tags.each do |tag| %>

    <% selected = @tags.include? tag %>

    <li class="<%= "black" if selected %>">
      <%= link_to tag.to_s, params.merge( tags: @tags.send( (selected ? :- : :+), [ tag ]) ), class: "btn btn-mini" %>
    </li>

  <% end %>
</ul>
