<div>
  <h6>Sizes Available:</h6>
  <ul class="unmarked-list floated-l-list font-size-12 clearfix space-0">
    <li><%= render "link_size", size: resource.dragonfly_options, title: "#{ resource.title_options } (Original)", checked: true %></li>
    <% Koi::Asset::Image.sizes[ 1..-1 ].each do |size| %>
      <li><%= render partial: "link_size", locals: size %></li>
    <% end %>
  </ul>

<%= link_to "Add to Page", resource.url, class: "btn btn-primary btn-small" %>
<%= link_to "Delete", url_for(:action => 'delete'), :confirm => "Are you sure you want to delete this #{ resource_class.name.downcase }?", :method => 'delete', class: "btn btn-small" %>
</div>
