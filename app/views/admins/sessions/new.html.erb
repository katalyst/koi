<div class="titlebar">
  <h1>Sign in</h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => koi_engine.new_admin_session_path, :html => { method: :post, class: "form-vertical" }) do |f| %>

  <div class="bg-lightgrey pad-l-2 pad-t-1 pad-b-1">
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>

    <% if flash[:alert] %>
      <p class="error"><%= flash[:alert] %></p>
    <% end %>

    <%= f.input :email, required: true, autofocus: true, input_html: { class: "w-510" } %>

    <%= f.input :password, required: true, input_html: { class: "w-510" } %>

    <%= f.input :remember_me, as: :boolean, wrapper: :checkbox, input_html: { class: "checkbox" }, label: "Keep me logged in on this computer" if devise_mapping.rememberable? %>
  </div>

  <div class="bg-mediumgrey pad-l-2 pad-t-1 pad-b-1">
    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <%= link_to "Forgot your password?", koi_engine.new_admin_password_path, class: "btn space-l-1" %>
    <% end -%>
      <%#= render "devise/shared/links" %>
    </ul>
  </div>

<% end %>


