<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { method: :put, class: "form-vertical" }) do |f| %>
  <%#= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="inputs">
    <%= f.input :password, :label => "New password", :required => true, input_html: { class: "w-510" } %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, input_html: { class: "w-510" } %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>