<%= table_with collection: url_rewrites, sort:, class: "index-table" do |row, url_rewrite| %>
  <%= row.cell :from do |cell| %>
    <%= link_to cell.value, admin_url_rewrite_path(url_rewrite) %>
  <% end %>
