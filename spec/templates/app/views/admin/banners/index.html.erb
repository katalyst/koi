<% content_for :header do %>
  <%= render(Koi::Header::IndexComponent.new(model: Banner)) %>
<% end %>

<%= koi_index_actions create: true, search: true %>

<%= table_with(collection:) do |row, banner| %>
  <% row.ordinal %>
  <% row.link :name %>
  <% row.attachment :image %>
<% end %>

<%= table_orderable_with(collection:, url: order_admin_banners_path) %>
