<% content_for :header do %>
  <%= render(Koi::Header::IndexComponent.new(model: Banner)) do |component| %>
    <% component.with_action "New", new_admin_banner_path %>
  <% end %>
<% end %>

<%= table_with(collection:) do |row, banner| %>
  <% row.ordinal %>
  <% row.link :name %>
  <% row.attachment :image %>
<% end %>

<%= table_orderable_with(collection:, url: order_admin_banners_path) %>
